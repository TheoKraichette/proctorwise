# ProctorWise Environment Configuration

# MariaDB Galera Cluster
MYSQL_ROOT_PASSWORD=proctorwise_root_secret
MYSQL_USER=proctorwise
MYSQL_PASSWORD=proctorwise_secret

# Database URLs (per service)
DATABASE_URL_USERS=mysql+pymysql://proctorwise:proctorwise_secret@mariadb:3306/proctorwise_users
DATABASE_URL_RESERVATIONS=mysql+pymysql://proctorwise:proctorwise_secret@mariadb:3306/proctorwise_reservations
DATABASE_URL_MONITORING=mysql+pymysql://proctorwise:proctorwise_secret@mariadb:3306/proctorwise_monitoring
DATABASE_URL_CORRECTIONS=mysql+pymysql://proctorwise:proctorwise_secret@mariadb:3306/proctorwise_corrections
DATABASE_URL_NOTIFICATIONS=mysql+pymysql://proctorwise:proctorwise_secret@mariadb:3306/proctorwise_notifications
DATABASE_URL_ANALYTICS=mysql+pymysql://proctorwise:proctorwise_secret@mariadb:3306/proctorwise_analytics

# Kafka Configuration
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# HDFS Configuration
HDFS_NAMENODE_HOST=namenode
HDFS_REPLICATION_FACTOR=2
HDFS_URL=http://namenode:9870

# Spark Configuration
SPARK_MASTER_URL=spark://spark-master:7077
SPARK_WORKER_CORES=2
SPARK_WORKER_MEMORY=2g

# Airflow Configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=mysql+pymysql://proctorwise:proctorwise_secret@mariadb:3306/airflow
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here
AIRFLOW__WEBSERVER__SECRET_KEY=your-webserver-secret-key

# Service Ports
USERSERVICE_PORT=8001
RESERVATIONSERVICE_PORT=8000
MONITORINGSERVICE_PORT=8003
CORRECTIONSERVICE_PORT=8004
NOTIFICATIONSERVICE_PORT=8005
ANALYTICSSERVICE_PORT=8006

# JWT Configuration (UserService)
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (NotificationService)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@proctorwise.com
SMTP_PASSWORD=smtp_password

# Feature Flags (Development)
USE_LOCAL_STORAGE=false
USE_MOCK_SENDERS=true
ENABLE_KAFKA_CONSUMER=false
